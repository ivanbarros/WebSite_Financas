    <script>
    function CarregarUsuarioLogado() {
        var nome = '@HttpContextAcessor.HttpContext.Session.GetString("NomeUsuarioLogado")'
        var email = '@HttpContextAcessor.HttpContext.Session.GetString("EmailUsuarioLogado")'
        if (nome != "") {

            var divNome = document.getElementById("NomeUsuarioLogado");
            divNome.innerHTML = nome;
            divNome.style = "color:#fff; text-align:right; height:50px; padding-top:13px;"

            if (email != "") {
                var divEmail = document.getElementById("EmailUsuarioLogado");
                divEmail.innerHTML = email;
                divEmail.style = "color:#fff; text-align:right; height:50px; padding-top:13px;"
            }
        }
    }
    </script>
