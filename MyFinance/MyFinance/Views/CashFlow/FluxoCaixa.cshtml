@model MyFinance.Domain.Entities.CashFlowEntity

@{
    ViewData["Title"] = "Fluxo de Caixa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="FluxoCaixa">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ValueCash" class="control-label"></label>
                <input asp-for="ValueCash" class="form-control" />
                <span asp-validation-for="ValueCash" class="text-danger"></span>
            </div>
            
            

            <div class="form-group">
                @Html.LabelFor(model => model.CategoryEnum, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select asp-for="CategoryEnum" asp-items="Html.GetEnumSelectList<MyFinance.Domain.Entities.Enums.CategoryEnum>()"></select>

                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TipoCashEnum, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select asp-for="TipoCashEnum" asp-items="Html.GetEnumSelectList<MyFinance.Domain.Entities.Enums.CashFlowTypeEnum>()"></select>

                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Pago, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select asp-for="Pago" asp-items="Html.GetEnumSelectList<MyFinance.Domain.Entities.Enums.IsPagoEnum>()"></select>

                </div>
                </div>

            <div class="form-group">
                <label asp-for="PaymentDate" class="control-label"></label>
                <input asp-for="PaymentDate" class="form-control" />
                <span asp-validation-for="PaymentDate" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="DatePaymentRealized" class="control-label"></label>
                <input asp-for="DatePaymentRealized" class="form-control" />
                <span asp-validation-for="DatePaymentRealized" class="text-danger"></span>
            </div>
            <p>
                <br />
            <div class="form-group">
                <button type="submit" class="btn btn-success">Criar</button>
            </div>
            </p>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
